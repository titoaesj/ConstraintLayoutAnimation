<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D2B41"
    tools:context="titoaesj.com.br.constraintlayoutanimation.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main_appcompatimageview_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shpae_card"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:srcCompat="@mipmap/ic_launcher">


        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passageiro"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jon Snow"
            android:textColor="#5736B8"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Voo"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BA0113"
            android:textColor="#5736B8"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView3"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Partida"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SEG, 5:30PM"
            android:textColor="#5736B8"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Assento"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5A"
            android:paddingBottom="24dp"
            android:textColor="#5736B8"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView5" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Chegada"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView5"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TER, 18:00PM"
            android:textColor="#5736B8"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/qrcode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:srcCompat="@drawable/ic_qr" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Terminal"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="@+id/qrcode" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/terminal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T5"
            android:textColor="#5736B8"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/terminal_label" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Portão"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/terminal_label"
            app:layout_constraintTop_toTopOf="@+id/qrcode" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/gate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textColor="#5736B8"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/gate_label"
            app:layout_constraintTop_toBottomOf="@+id/gate_label" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/boarding_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Embarque"
            android:textColor="#9B9DB1"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/terminal_value" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/boarding_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textColor="#5736B8"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/boarding_label" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/circle_left"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/shape_circle" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/circle_rigth"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/shape_circle" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dotted_line"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layerType="software"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintEnd_toStartOf="@+id/circle_rigth"
        app:layout_constraintStart_toEndOf="@+id/circle_left"
        app:layout_constraintTop_toTopOf="@+id/activity_main_appcompatimageview_image"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/ic_dot_line" />

</android.support.constraint.ConstraintLayout>
